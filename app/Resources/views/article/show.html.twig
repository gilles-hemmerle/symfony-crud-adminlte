{% extends 'base.html.twig' %}

{% block page_title %}
    {% trans %}Article{% endtrans %}
{% endblock %}

{% block page_subtitle %}
   {% trans %} Hereafter all the details of the item{% endtrans %}
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                  <i class="fa fa-file"></i>
                  <h3 class="box-title">{% trans %}Details{% endtrans %}</h3>
                </div>
                <div class="box-body no-padding">
                    <table class="table table-bordered table-striped">                        
                        <tr>
                            <th>{% trans %}Slug{% endtrans %}</th>
                            <td>{{ article.slug }}</td>
                        </tr>                        
                        <tr>
                            <th>{% trans %}Articletitle{% endtrans %}</th>
                            <td>{{ article.articleTitle }}</td>
                        </tr>                        
                        <tr>
                            <th>{% trans %}Articlecontent{% endtrans %}</th>
                            <td>{{ article.articleContent }}</td>
                        </tr>                        
                        <tr>
                            <th>{% trans %}Id{% endtrans %}</th>
                            <td>{{ article.id }}</td>
                        </tr>                        
                    </table>
                </div>
            </div>

        </div>
    </div>
<div class="row">
    <div class="col-xs-12">
        <a class="btn btn-default" href="{{ path('admin_article_index') }}"><i class="fa fa-list"></i> {% trans %}Back to the list{% endtrans %}</a>
        <a class="btn btn-default" href="{{ path('admin_article_edit', { 'id': article.id }) }}"><i class="fa fa-edit"></i> {% trans %}Edit{% endtrans %}</a>        
            {{ form_start(delete_form, { 'attr': {'class': 'pull-right'} }) }}

                <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> {% trans %}Delete{% endtrans %}</button>

            {{ form_end(delete_form) }}
    </div>
</div>
{% endblock %}
